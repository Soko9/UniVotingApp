<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/candidateImage"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_marginStart="-18dp"
        android:src="@drawable/male"
        android:background="@drawable/revote_button_background"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnVoting"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/candidateImage"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="-4dp"
        android:src="@drawable/vote"
        android:background="@drawable/revote_button_background"/>

    <TextView
        android:id="@+id/candidateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@id/btnVoting"
        android:gravity="start"
        tools:text="Yahya Saadi"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/candidateDepartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/candidateName"
        android:padding="8dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/btnVoting"
        android:gravity="start"
        tools:text="Software Engineering"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/candidateCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/candidateDepartment"
        android:padding="8dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/btnVoting"
        android:gravity="start"
        tools:text="Palestine"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/candidateDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/candidateCountry"
        android:layout_toEndOf="@id/btnVoting"
        android:gravity="start"
        android:layout_marginTop="6dp"
        android:padding="8dp"
        android:maxLength="75"
        tools:text="Yahya SaadiYahya SaadiYahya SaadiYahya SaadiYahya Saadi"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/btnVoting"
        android:layout_marginTop="32dp"/>

</RelativeLayout>

